---
import Image from "astro/components/Image.astro";
import { type CollectionEntry} from 'astro:content';

type Props = { post: CollectionEntry<'posts'>;};

const {post} = Astro.props;

//console.log(post)
---
<article>
   <a href={`/blog/${post.slug}`}>
        <Image
            src={post.data.image}
            width={600}
            height={600 / 1.5}
            alt={post.data.title}
            class="rounded-2xl text-zinc-900 font-semibold inline-block"
        />
    </a>
    <a href={`/blog/${post.slug}`}>
        <h2 class="mt-2 mb-2 text-2xl text-teal-700 font-semibold">{post.data.title}</h2>
    </a>
    <p class="text-zinc-500 text-2xl line-clamp-2">
        {post.body}
    </p>
</article>
